<form id="frm_create_nhomVatTu" name="CreateOrEditForm" novalidate class="his-form">
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>{{vm.title}}</span>
        </h4>
    </div>
    <div class="modal-body">        
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="row his-row">
                    <div class="col-sm-2"><label for="donvi" class="form-label">Đơn vị</label></div>
                    <div class="col-sm-10">
                        <select ng-model="vm.objEntity.iddonvi" class="form-control show-tick">
                            <option ng-repeat="x in vm.donvis" value="{{x.id}}">{{x.name}}</option>
                        </select>
                    </div>
                </div>
                <div class="row his-row">
                    <div class="col-sm-2"><label for="name" class="form-label">Tên trạm</label></div>
                    <div class="col-sm-10"><input id="name" type="text" name="name" ng-model="vm.objEntity.name" required  class="validate form-control"></div>
                </div>
                <div class="row his-row">
                    <div class="col-sm-2"><label for="code" class="form-label">Mã trạm</label></div>
                    <div class="col-sm-10"><input id="code" type="text" name="code" ng-model="vm.objEntity.code" required  class="validate form-control"></div>
                </div>
                <div class="row his-row">
                    <div class="col-sm-2"><label for="address" class="form-label">Địa chỉ</label></div>
                    <div class="col-sm-10"><input id="address" type="text" name="address" ng-model="vm.objEntity.address"   class="validate form-control"></div>
                </div>
                <div class="row his-row">
                    <div class="col-sm-2"><label for="description" class="form-label">Mô tả</label></div>
                    <div class="col-sm-10"><input id="description" type="text" name="description" ng-model="vm.objEntity.description"   class="validate form-control"></div>
                </div>
            </div>            
        </div>        
    </div>
    <div class="modal-footer">
        <input id="id" type="hidden" name="id" ng-model="vm.objEntity.id" class="validate form-control">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="CreateOrEditForm.$invalid">
            @L("Save")
        </button>
    </div>

</form>