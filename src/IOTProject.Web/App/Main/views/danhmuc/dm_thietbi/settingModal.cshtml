<form id="frm_create_nhomVatTu" name="CreateOrEditForm" novalidate class="his-form">
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>Nội dung quản lý</span>
        </h4>
    </div>
    <div class="modal-body">        
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="row his-row">
                    <div class="col-sm-3"><label for="idtram" class="form-label">Nội dung quản lý:</label></div>
                    <div class="col-sm-8">
                        <select ng-model="vm.objEntity.idthongtinquanly" class="form-control show-tick">
                            <option ng-repeat="x in vm.thongtinquanlys" value="{{x.id}}">{{x.name}}</option>
                        </select>
                    </div>
                    <div class="col-sm-1">
                        <ul class="list-inline">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.CreateThongTinThietBi()" title="@L("Create")"><i class="material-icons">add</i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="row his-row">
                    <div class="col-sm-3"><label for="idtram" class="form-label">Trạng thái default:</label></div>
                    <div class="col-sm-3"><input id="description" type="text" name="description" ng-model="vm.objEntity.trangthai" class="validate form-control"></div>
                    <div class="col-sm-3"><label for="idtram" class="form-label">Mô tả:</label></div>
                    <div class="col-sm-3"><input id="description" type="text" name="description" ng-model="vm.objEntity.description" class="validate form-control"></div>
                </div>
            </div>   
            <table class="table table-hover table-striped his-table">
                <thead>
                    <tr>
                        <th width="5px" class="text-center">STT</th>
                        <th>Nội dung quản lý</th>
                        <th>Trạng thái</th>
                        <th>Mô tả</th>
                        <th width="15%">Xử lý</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in vm.noidungquanlys">
                        <td class="text-center">{{$index+1}}</td>
                        <td>{{item.thongtinquanly.name}}</td>
                        <td>{{item.trangthai}}</td>
                        <td>{{item.description}}</td>
                        <td class="dropdown">
                            <ul class="list-inline">
                                <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(item)" title="@L("Delete")"><i class="material-icons">delete_sweep</i></a></li>
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>        
    </div>
